{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": ["react", "react-dom"]
  },
  "include": ["src/client/**/*", "src/**/*.d.ts", "src/index.tsx"]
}
